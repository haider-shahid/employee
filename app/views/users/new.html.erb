<h1 align="center">Sign Up</h1>

<% if @user.errors.any? %>
  <div class="row">
    <div class = "col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this employee from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= form_for(@user ,:html => {class: "form-horizontal" ,role: "form"}) do |form| %>
  <div class="form-group">
    <%= form.label :username , class:"col-sm-2 control-label col-sm-offset-1" %>
    <div class = "col-sm-6">
      <%= form.text_field :username , class:"form-control",placeholder:"Enter User Name"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email,class:"col-sm-2 control-label col-sm-offset-1" %>
    <div class="col-sm-6">
      <%= form.email_field :email, class:"form-control", placeholder:"Enter email" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password,class:"col-sm-2 control-label col-sm-offset-1" %>
    <div class="col-sm-6">
      <%= form.password_field :password, class:"form-control", placeholder:"Enter password" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">
      <%= form.submit "Sign Up", class:"btn btn-primary" %>
    </div>
    <div class="col-sm-offset-3 col-sm-6">
      [Already have a Account. <%= link_to "Login",login_path %>]
    </div>
  </div>
<% end %>