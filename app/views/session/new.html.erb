<h1 align="center">Login</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
  </div>
</div>

<%= form_for(:session ,:html => {class: "form-horizontal" ,role: "form"},url: login_path) do |form| %>
  <div class="form-group">
    <%= form.label :email,class:"col-sm-2 control-label col-sm-offset-1" %>
    <div class="col-sm-6">
      <%= form.email_field :email, class:"form-control", placeholder:"Enter email" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :passwrd,class:"col-sm-2 control-label col-sm-offset-1" %>
    <div class="col-sm-6">
      <%= form.password_field :passwrd, class:"form-control", autocomplete: "off" ,placeholder: "Enter Password here"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">
      <%= form.submit "Login", class:"btn btn-primary" %>
    </div>
    <div class="col-sm-offset-3 col-sm-6">
      Don't have a accout <%= link_to "Signup" ,signup_path %>
    </div>
  </div>
<% end %>