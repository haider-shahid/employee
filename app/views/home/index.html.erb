<div class="row" style="text-align: center;">
  <div class ="col-md-12 ">
    <div class="jumbotron">
      <h1>Welcome to Employee System</h1>

      <br>

      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
          <% end %>
        </div>
      </div>

      <p>
        <%= link_to "Login" , login_path,class:"btn btn-primary btn-lg"%>
        <%= link_to "Signup" , signup_path , class:"btn btn-primary btn-lg"%>
      </p>
    </div>
  </div>
</div>